{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Python - Flask",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Docker: Node.js",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/frontend",
            "remoteRoot": "/app",
            "restart": true
        }
    ]
}
